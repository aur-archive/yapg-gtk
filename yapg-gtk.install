post_install(){
	echo "===>"
	echo "NOTE: to start auto-update utility when user login in his desktop"
	echo "and update system without need to be root. You need to edit"
	echo "'/etc/sudoers' and this string at the end of file:"
	echo "%user ALL=(ALL) NOPASSWD: /usr/bin/yapg-autoupdate"
	echo "Replace '%user' with the username of user who can perform updates"
	echo "<==="
}
